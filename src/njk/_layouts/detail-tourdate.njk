{% extends '_layouts/base.njk' %}

{% block content %}
<div class="container">
  <div class="row">
    <div class="col">
      <img src="img/queen-logo-black.png" class="img-fluid" alt="Responsive image">
    </div>
  </div>
  <div class="row">
    <div class="col">
      <h2>Tour Dates</h2>          
      <table class="table table-striped">
        <thead>
          <tr>
            <th>City</th>
            <th>Date</th>
            <th>Venue</th>
          </tr>
        </thead>
        {% for tourdate in tour.tourdates %}
          <tbody>
            <tr>
              <td>{{tourdate.city}}</td>
              <td>{{tourdate.date}}</td>
              <td>{{tourdate.venue}}</td>
            </tr>
          </tbody>
        {% endfor %}
      </table>
    </div>
  </div>
</div>
{% endblock %}